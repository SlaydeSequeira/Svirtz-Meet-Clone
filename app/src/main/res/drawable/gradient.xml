<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background (white) -->
    <item>
        <shape>
            <solid android:color="#ECECEC" />
        </shape>
    </item>
    <item android:right="5dp" android:left="70dp" android:top="0dp" android:bottom="0dp">
        <rotate
            android:fromDegrees="65"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape>
                <solid android:color="#E3A1FF" />
                <corners android:radius="0dp" />
            </shape>
        </rotate>
    </item>
    <item android:right="5dp" android:left="150dp" android:top="30dp" android:bottom="0dp">
        <rotate
            android:fromDegrees="65"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape>
                <solid android:color="#822EA6" />
                <corners android:radius="0dp" />
            </shape>
        </rotate>
    </item>

</layer-list>



